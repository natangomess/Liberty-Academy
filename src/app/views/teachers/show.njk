{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center / cover;"></section>
    <section class="details">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{teacher.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{teacher.age}}</div>
      </div>

      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>{{teacher.education_level}}</div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>{{"Presencial" if teacher.class_type == "P" else "À Distância"}}</div>
      </div>

      <div class="item">
        <div>Acompanhamento</div>
        <div>
          {% for subjects_taughts in teacher.subjects_taught %}
            <span>{{subjects_taughts}}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
      </div>

      <a href="/teachers/{{teacher.id}}/edit" class="buttons" id="button">Editar</a>

      <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
        <input
        type="hidden"
        name="id"
        value="{{teacher.id}}">

        {% include 'confirm.njk' %}

        <button class="delete" type="submit">Deletar</button>
      </form>
    </section>
  </div>

{% endblock content %}