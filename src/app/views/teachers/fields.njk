<div class="item">
  <div>Avatar URL</div>
  <div>
    <input
    type="url"
    name="avatar_url"
    placeholder="http://"
    value="{{teacher.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <input
    type="text"
    name="name"
    placeholder="Nome do Professor"
    value="{{teacher.name}}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input
      type="date"
      name="birth_date"
      value="{{teacher.birth_date}}">
  </div>
</div>

<div class="item">
  <div>Grau de Escolaridade</div>
  <div>
    <select name="education_level">
      <option
      value="EMC"
      {% if teacher.education_level == 'EMC'%}
      selected
      {% endif %}>Ensino Médio Completo
      </option>
      <option
      value="ESC"
      {% if teacher.education_level == 'ESC'%}
      selected
      {% endif %}>Ensino Superior Completo
      </option>
      <option
      value="M"
      {% if teacher.education_level == 'M'%}
      selected
      {% endif %}>Mestrado
      </option>
      <option
      value="D"
      {% if teacher.education_level == 'D'%}
      selected
      {% endif %}>Doutorado
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de Aula</div>
  <span> 
    <input
    type="radio"
    name="class_type"
    value="P"
    {% if teacher.class_type == 'P' %}
    checked
    {% endif %}>Presencial
  </span>
  <span>
    <input
    type="radio"
    name="class_type"
    value="D"
    {% if teacher.class_type == 'D' %}
    checked
    {% endif %}>À Distância
  </span>
</div>

<div class="item">
  <div>Área de Atuação</div>
  <div>
    <input
      type="text"
      name="subjects_taught"
      placeholder="Separe as áreas de atuação por vírgula"
      value="{{teacher.subjects_taught}}">
  </div>
</div>

<button class="buttons" type="submit">Salvar</button>
