<div class="item">
  <div>Avatar URL</div>
  <div>
    <input
    type="url"
    name="avatar_url"
    placeholder="http://"
    value="{{student.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Aluno</div>
  <div>
    <input
    type="text"
    name="name"
    placeholder="Nome do Aluno"
    value="{{student.name}}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input
      type="date"
      name="birth_date"
      value="{{student.birth_date}}">
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input
    type="email"
    name="email"
    value="{{student.email}}">
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="school_year">
      <optgroup label="Fundamental">
        <option
        value="5EF"
        {% if student.school_year == '5EF'%}
        selected
        {% endif %}>5º Ano do Ensino Fundamental
        </option>

        <option
        value="6EF"
        {% if student.school_year == '6EF'%}
        selected
        {% endif %}>6º Ano do Ensino Fundamental
        </option>

        <option
        value="7EF"
        {% if student.school_year == '7EF'%}
        selected
        {% endif %}>7º Ano do Ensino Fundamental
        </option>

        <option
        value="8EF"
        {% if student.school_year == '8EF'%}
        selected
        {% endif %}>8º Ano do Ensino Fundamental
        </option>

        <option
        value="9EF"
        {% if student.school_year == '9EF'%}
        selected
        {% endif %}>9º Ano do Ensino Fundamental
        </option>
      </optgroup>


      <optgroup label="Médio">
        <option
        value="1EM"
        {% if student.school_year == '1EM'%}
        selected
        {% endif %}>1º Ano do Ensino Médio
        </option>

        <option
        value="2EM"
        {% if student.school_year == '2EM'%}
        selected
        {% endif %}>2º Ano do Ensino Médio
        </option>

        <option
        value="3EM"
        {% if student.school_year == '3EM'%}
        selected
        {% endif %}>3º Ano do Ensino Médio
        </option>
      </optgroup>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga Horária</div>
  <div>
    <input
    type="number"
    name="workload"
    placeholder="Carga Horária Semanal"
    value="{{student.workload}}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <select name="teacher">
      {% for teacher in teacherOptions %}
        <option value="{{teacher.id}}" {% if member.teacher_id == teacher.id %} selected {% endif %}>
          {{teacher.name}}
        </option>
      {% endfor %}
    </select>
  </div>
</div>

<button class="buttons" type="submit">Salvar</button>
